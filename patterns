#include<iostream>
 using namespace std;
 int main(void){
     int rows;
     cout<<"Enter the number of rows: ";
     cin>>rows;
     for(int i = 0; i < rows; i++){
         for(int spaces = 0; spaces < rows - i - 1; spaces++){
             cout<<" ";
         }       
         for(int j = 0; j < i+1; j++){
             cout<<'*';
         }
         for(int k = 1; k<i+1; k++){
             cout<<"*";
         }
         cout<<"\n";
     }
 }
